
<div class="grid">
  <!-- .grid-sizer empty element, only used for element sizing -->
	<div class="grid-sizer"></div>
	{#products}

		<a href="/product/{id}"><div class="grid-item"  data-id="{id}" data-cost="{price}">
			<div class="grid-contain">
				<img class="grid-image" src="{image.outfit}">
				<div class="designer">{designer}</div>
				<div class="product-name">{name}</div>
				<div class="price">Buy now for - {price}</div>
			</div>

		</div></a>
	{/products}


</div>
